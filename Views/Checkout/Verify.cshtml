@model List<SimpleProject.Models.GalleryItem>
@{
    ViewData["Title"] = "Verify Selected Items";
}

<div class="details-container">
    <h1>Verify Selected Items</h1>
    <p>Please verify the items you have selected before final confirmation.</p>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <span>
                    <strong>@item.Title</strong> - @item.Category
                </span>
                <span>@item.Price.ToString("C")</span>
            </li>
        }
    </ul>

    <div class="mt-3 d-flex gap-2">
        <form asp-controller="Checkout" asp-action="List" method="get">
            @foreach (var item in Model)
            {
                <input type="hidden" name="selectedIds" value="@item.Id" />
            }
            <button type="submit" class="btn btn-secondary">Back to item list</button>
        </form>
    </div>
</div>

