@model List<SimpleProject.Models.GalleryItem>
@{
    ViewData["Title"] = "Gallery";
}

<div class="gallery-header">
    <h1>Photo Gallery removed latest tag on image</h1>
    <p>Explore our collection of beautiful images</p>
    <p style="color:red; font-weight:bold;">(Selection mode enabled: you should see checkboxes labelled 'Select' above each image.)</p>
</div>

<form asp-controller="Checkout" asp-action="List" method="get">
    <div class="gallery-grid">
        @foreach (var item in Model)
        {
            <div class="gallery-item">
                <label style="display:block; margin-bottom:4px;">
                    <input type="checkbox" name="selectedIds" value="@item.Id" />
                    Select
                </label>
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                    <div class="gallery-image-container">
                        <img src="@item.ImageUrl" alt="@item.Title" class="gallery-image" />
                        <div class="gallery-overlay">
                            <h3>@item.Title</h3>
                            <p>@item.Category</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <div style="margin-top:16px;">
        <button type="submit" class="btn btn-primary">
            View selected items
        </button>
    </div>
</form>

